<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Moto-water</title>
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/hidden.css">
    <script src="/jquery/jquery.js"></script>
    <script type="text/javascript" src="/javascripts/catalog_button.js"></script>
</head>

<body>
    <div class="hid-sub" onclick=" buttonClickSub('off')">
        <div class="sub">
            Товар добавлен в корзину
        </div>
    </div>
    <div class="hid">
        <div class="wraphidden">
            <form class="hidden" action="/catalog/filter" method="post">
                <div class="storke">
                    <h4>ТИП МОТОРОВ</h4>
                    <p><label><input type="checkbox" value="2" name="storke2"> 2-х тактные</label></p>
                    <p><label><input type="checkbox" value="4" name="storke4"> 4-х тактные</label></p>
                </div>
                <div class="start">
                    <h4>ЗАПУСК</h4>
                    <p><label><input type="checkbox" value="r" name="start_r"> ручной</label></p>
                    <p><label><input type="checkbox" value="e" name="start_e"> електро</label></p>
                    <p><label><input type="checkbox" value="er" name="start_er"> ручной + електро</label></p>
                </div>
                <div class="control">
                    <h4>УПРАВЛЕНИЕ МОТОРОМ</h4>
                    <p><label><input type="checkbox" value="r" name="control_r"> румпель</label></p>
                    <p><label><input type="checkbox" value="d" name="control_d"> дистанционое</label></p>
                    <p><label><input type="checkbox" value="rd" name="control_rd"> румпель+дистанционое</label></p>
                </div>
                <div сlass="power">
                    <h4>МОЩНОСТЬ МОТОРА</h4>
                    <p><label><input type="checkbox" value="3.5" name="power_1"> 2-3,5 л.с</label></p>
                    <p><label><input type="checkbox" value="7.5" name="power_2"> 4-7,5 л.с</label></p>
                    <p><label><input type="checkbox" value="15" name="power_3"> 8-15 л.с</label></p>
                    <p><label><input type="checkbox" value="25" name="power_4"> 18-25 л.с</label></p>
                    <p><label><input type="checkbox" value="40" name="power_5"> 30-40 л.с</label></p>
                    <p><label><input type="checkbox" value="70" name="power_6"> 50-70 л.с</label></p>
                    <p><label><input type="checkbox" value="300" name="power_7"> более 70 л.с</label></p>
                </div>
                <div class="button">
                    <p><label><button type="submit" style="display: none;cursor: pointer;"></button>ПРИМЕНИТЬ</label></p>
                    <p><label><button type="reset" style="display: none;cursor: pointer;"></button>СБРОСИТЬ</label></p>
                </div>
            </form>
        </div>
        <div class="pole" onclick=" buttonClickfilter('off')">
        </div>
    </div>
    <div class="wrap">
        <div class="wrap">
            <%- include('elements/header');-%>
            <%- include('elements/nav'); -%>
            <div class="wrap-main">
                <div class="main">
                    <aside>
                        <form action="/catalog/filter" method="post">
                            <div class="storke">
                                <h4>ТИП МОТОРОВ</h4>
                                <p><label><input type="checkbox" value="2" name="storke2"> 2-х тактные</label></p>
                                <p><label><input type="checkbox" value="4" name="storke4"> 4-х тактные</label></p>
                            </div>
                            <div class="start">
                                <h4>ЗАПУСК</h4>
                                <p><label><input type="checkbox" value="r" name="start_r"> ручной</label></p>
                                <p><label><input type="checkbox" value="e" name="start_e"> електро</label></p>
                                <p><label><input type="checkbox" value="er" name="start_er"> ручной + електро</label></p>
                            </div>
                            <div class="control">
                                <h4>УПРАВЛЕНИЕ МОТОРОМ</h4>
                                <p><label><input type="checkbox" value="r" name="control_r"> румпель</label></p>
                                <p><label><input type="checkbox" value="d" name="control_d"> дистанционое</label></p>
                                <p><label><input type="checkbox" value="rd" name="control_rd"> румпель+дистанционое</label></p>
                            </div>
                            <div сlass="power">
                                <h4>МОЩНОСТЬ МОТОРА</h4>
                                <p><label><input type="checkbox" value="3.5" name="power_1"> 2-3,5 л.с</label></p>
                                <p><label><input type="checkbox" value="7.5" name="power_2"> 4-7,5 л.с</label></p>
                                <p><label><input type="checkbox" value="15" name="power_3"> 8-15 л.с</label></p>
                                <p><label><input type="checkbox" value="25" name="power_4"> 18-25 л.с</label></p>
                                <p><label><input type="checkbox" value="40" name="power_5"> 30-40 л.с</label></p>
                                <p><label><input type="checkbox" value="70" name="power_6"> 50-70 л.с</label></p>
                                <p><label><input type="checkbox" value="300" name="power_7"> более 70 л.с</label></p>
                            </div>
                            <div class="button">
                                <p><label><button type="submit" style="display: none;"></button>ПРИМЕНИТЬ</label></p>
                                <p><label><button type="reset" style="display: none;"></button>СБРОСИТЬ</label></p>
                            </div>
                        </form>
                    </aside>
                    <section>
                        <ul class="product-list">
                            <% list.forEach(function(item){ %>
                            <li>
                                <a href="goods.html">
                                    <label><img src="<%=item.picture%>" alt="mot1" width="250" height="200" style="Cursor:pointer;">
                                        <span class="name-prod" style="Cursor:pointer;">
                                            <%=item.name%>
                                        </span></label>
                                </a>
                                <hr>
                                <div class="price-prod">
                                    Цена:
                                    <h5>
                                        <%=item.price%>,00</h5>
                                </div>
                                <p><label><button value="<%=item.id%>" style="border: 0px solid #FFFFFF; Cursor:pointer;" onclick="buttonClickAddInCart(this)"><img src="/images/case.png" alt="case"></button></label></p>
                            </li>
                            <% }); %>
                        </ul>
                    </section>
                </div>
            </div>
            <div class="pagination">
            </div>
            <%- include('elements/footer'); -%>
        </div>
</body>

</html>